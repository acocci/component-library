{
  "compilerOptions": {
    // Default
    "target": "es5", 
    "esModuleInterop": true, 
    "forceConsistentCasingInFileNames": true,
    "strict": true, 
    "skipLibCheck": true,

    // Added
    "allowSyntheticDefaultImports": true,
    "emitDeclarationOnly": true,
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "types",
    "jsx": "react", 
    "outDir": "dist",
 
    "moduleResolution": "node",
    "sourceMap": true,
    "noImplicitAny": false,
  },
  
}